<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml" styleClass="statistics"
         onKeyPressed="#keyPressed">
    <top>
        <HBox alignment="CENTER" spacing="20">
            <Label fx:id="name" text="Statistics for: Zohar" textFill="#33adff" textAlignment="CENTER"
                   alignment="CENTER"/>
            <Button text="Close" onAction="#close"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="gamesPlayed" text="Games played: 12"/>
            <Label fx:id="gamesWon" text="Games won: 3"/>
            <Label fx:id="folded" text="Times folded: 32"/>
            <Label fx:id="call" text="Times called: 24"/>
            <Label fx:id="check" text="Times checked: 11"/>
            <Label fx:id="totalBet" text="Total bets: 10"/>
            <Label fx:id="averageBet" text="Average bet: 34"/>
            <Label fx:id="balance" text="Total balance: Infinity"/>
        </VBox>
    </center>
</fx:root>