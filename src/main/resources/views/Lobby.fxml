<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox fx:id="searchBar">
            <TextField fx:id="search" text="Search"/>
            <Button text="Search" fx:id="submit" onAction="#search"/>
            <CheckBox fx:id="checkBoxFriends" text="Show only friends" onAction="#friendBox"/>
        </HBox>
    </top>

    <center>
        <TilePane fx:id="lobbyTile">
        </TilePane>
    </center>
</fx:root>