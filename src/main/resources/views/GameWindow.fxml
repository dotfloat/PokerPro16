<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.gruppe2.ui.javafx.GameWindowController" fx:id="borderPane" styleClass="background">
   <center>
   		<StackPane>
	  		<ImageView fx:id="pokerTable" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 50, 0.3, 10, 10)">
			        <image>
			                <Image url="/images/ui/PokertableWithLogo.png"/>
			        </image>
			</ImageView>
		</StackPane>
   </center>
   <bottom>
   			<HBox styleClass="hbox" spacing="20" >
				<TextField fx:id="chatField" prefWidth="200" />
				<Button fx:id="FOLD" text="FOLD" id="button" />
				<Slider fx:id="slider" id="slider" prefWidth="500" />
				<Label fx:id="sliderValue" text="0 CHIPS" id="label"/>
				<Button fx:id="BET" text="BET" id="button" />
				<Label text="" id="label" prefWidth="200"/>
				<Label /> 
			</HBox>

   </bottom> 
</BorderPane>
