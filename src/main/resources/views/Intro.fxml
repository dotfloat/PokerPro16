<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import org.gruppe2.ui.javafx.RightMenu?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml"
            stylesheets="/css/style.css" onMouseClicked="#goToMenu" fx:id="borderPane">

    <top>
        <StackPane alignment="CENTER" style="-fx-padding: 30px,0,0,0">
            <ImageView fx:id="logo" preserveRatio="true">
                <Image url="/images/ui/pokerWhite.png"/>
            </ImageView>
        </StackPane>

    </top>

    <center>
        <Label fx:id="clickToContinue" text="Click to continue"/>
    </center>

    <right>
        <RightMenu alignment="TOP_RIGHT"></RightMenu>
    </right>


</fx:root>