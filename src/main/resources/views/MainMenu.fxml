<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.gruppe2.ui.javafx.MainMenu">
        <top>
                <StackPane alignment="CENTER" style="-fx-padding: 30px,0,0,0">
                        <ImageView fx:id="logo" preserveRatio="true">
                                <Image url="/images/ui/pokerWhite.png"/>
                        </ImageView>
                </StackPane>
        </top>
        <left>

        </left>
        <center>
                <VBox fx:id="vBox" alignment="CENTER" styleClass="vbox" spacing="10">
                        <Button fx:id = "createTable" text = "Create Table"/>
                        <Button fx:id = "joinTable" text = "Join Table"/>
                        <Button fx:id ="singlePlayer" text = "Singleplayer" onAction="#goToSinglePlayer"/>
                        <Button fx:id = "viewStatistics" text = "View Statistics"/>
                        <Button fx:id = "settings" text = "Settings"/>
                </VBox>
        </center>

</BorderPane>

	


