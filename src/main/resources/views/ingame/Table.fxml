<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.gruppe2.ui.javafx.ingame.ChatBox?>
<?import org.gruppe2.ui.javafx.ingame.CommunityCards?>
<?import org.gruppe2.ui.javafx.ingame.Pot?>
<?import org.gruppe2.ui.javafx.ingame.ThisPlayerInfoBox?>
<?import org.gruppe2.ui.javafx.menu.HelperMenu?>
<?import org.gruppe2.ui.javafx.menu.RightMenu?>

<fx:root type="javafx.scene.layout.StackPane" xmlns:fx="http://javafx.com/fxml">
    <ImageView fx:id="pokerTable" preserveRatio="true"
               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 50, 0.3, 10, 10)">
        <Image url="/images/ui/PokertableWithLogo.png"/>
    </ImageView>
    <VBox alignment="CENTER" fx:id="tableItemsBox">
        <CommunityCards fx:id="communityCardsBox"/>
        <Pot fx:id="pot"/>
        <Label fx:id="nothing"/>
        <Label fx:id="nothing2"/>
    </VBox>
    <ChatBox fx:id="chatBox"/>
    <RightMenu fx:id="rightMenu" alignment="TOP_RIGHT"/>
    <HelperMenu fx:id="helperMenu" alignment="TOP_LEFT"/>
    <ThisPlayerInfoBox fx:id="thisPlayer"/>

</fx:root>