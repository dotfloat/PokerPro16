<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.Pane?>
<?import org.gruppe2.ui.javafx.ingame.ChoiceBar?>
<?import org.gruppe2.ui.javafx.ingame.PlayerCards?>
<?import org.gruppe2.ui.javafx.ingame.Table?>
<?import org.gruppe2.ui.javafx.ingame.ChatBox?>
<?import org.gruppe2.ui.javafx.menu.HelperMenu?>
<?import org.gruppe2.ui.javafx.menu.RightMenu?>
<?import org.gruppe2.ui.javafx.PokerApplication?>
<?import org.gruppe2.ui.javafx.ingame.ThisPlayerInfoBox?>
<fx:root type="Pane" xmlns:fx="http://javafx.com/fxml" styleClass="background">
    <fx:define>
        <PokerApplication fx:factory="getRoot" fx:id="root"/>
    </fx:define>

    <PlayerCards fx:id="playerCards"
                 maxHeight="${root.width * 0.2}"
                 maxWidth="${root.height * 0.2}"
                 layoutX="${root.width - playerCards.width}"
                 layoutY="${root.height - playerCards.height}"/>

    <ChoiceBar fx:id="choiceBar"
               layoutX="${root.width / 2 - choiceBar.width / 2}"
               layoutY="${root.height - choiceBar.height}"/>

    <ChatBox fx:id="chatBox"
             layoutX="0.0"
             layoutY="${root.height - choiceBar.height - chatBox.height}"/>

    <Table fx:id="table"
           layoutX="${root.width / 2.0 - table.width / 2.0}"
           layoutY="${root.height / 4.0 - table.height / 4.0}"
           fitWidth="${root.width}"
           fitHeight="${root.height - choiceBar.height}"/>

    <ThisPlayerInfoBox fx:id="playerBox"
                       layoutX="${root.width / 2 - playerBox.width / 2}"
                       layoutY="${root.height - choiceBar.height - playerBox.height}"/>

    <HelperMenu/>

    <RightMenu fx:id="rightMenu"
               layoutX="${root.width - rightMenu.width}"
               layoutY="0.0"/>
</fx:root>
