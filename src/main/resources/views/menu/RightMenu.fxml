<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToggleButton?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml"
         stylesheets="/css/style.css" fx:id="rightMenu">

    <ToggleButton fx:id="showMenu" onAction="#showMenu" styleClass="menuButton"
                  style="-fx-background-image: url(/images/ui/chip2.png)"/>
    <VBox fx:id="innerBox" styleClass="rightMenu">
        <Button fx:id="viewStatistics" text="View statistics" onAction="#viewStatistics"/>
        <Button fx:id="viewLobby" text="View lobby" onAction="#viewLobby"/>
        <Button fx:id="leaveTable" text="Leave table" onAction="#leaveTable"/>
    </VBox>

</fx:root>