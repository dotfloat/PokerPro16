<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="javafx.scene.layout.Pane" xmlns:fx="http://javafx.com/fxml" styleClass="lobby" width="400">


    <HBox spacing="5">

        <VBox alignment="CENTER">
            <Label text="Name"/>
            <Label text="Small blind: "/>
            <Label text="Big blind"/>
            <Label text="Start money: "/>
            <Label text="Max players: "/>
        </VBox>
        <VBox alignment="CENTER">
            <TextField fx:id="tableName"/>
            <TextField fx:id="smallBlind"/>
            <TextField fx:id="bigBlind"/>
            <TextField fx:id="startMoney"/>
            <TextField fx:id="maxPlayers"/>
        </VBox>
    </HBox>
</fx:root>